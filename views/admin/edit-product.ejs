<%- include("../includes/head.ejs") %>
<%- include("../includes/nav.ejs") %>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-body">
                    <% if(!editing) { %>
                    <form class="" action="/admin/add-product" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                                    <input type="text" name="title" class="form-control" id="title">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="image">Img URL</label>
                                    <input type="file" name="image" class="form-control" id="image">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="text" name="price" class="form-control" id="price">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea rows="" name="description" class="form-control" id="description" placeholder="Description" cols=""></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <button class="btn btn-info" type="submit">
                                       Add Product
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <% } %>

                    <% if(editing) { %>
                    <form class="" action="/admin/edit-product" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                                    <input type="text" value="<%= product.title %>" name="title" class="form-control" id="title">
                                    <input type="hidden" value="<%= product._id %>" name="id" class="form-control" id="id">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="image">Img URL</label>
                                    <input type="file" value="" name="image" class="form-control" id="image">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="price">Price</label>
                                    <input type="text" value="<%= product.price %>" name="price" class="form-control" id="price">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea rows="" name="description" class="form-control" id="description" placeholder="Description" cols=""><%= product.description %></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <button class="btn btn-info" type="submit">
                                       Edit Product
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("../includes/end.ejs") %>